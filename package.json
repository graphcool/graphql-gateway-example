{
  "name": "graphql-server-example",
  "version": "0.0.0",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect -r dotenv/config src/index.ts",
    "prepare": "graphql prepare",
    "playground": "graphql playground",
    "build": "rm -rf dist && graphql prepare && tsc",
    "deploy": "now --public --dotenv .env.prod && now alias && now rm --yes --safe graphql-server-example",
    "now-start": "node dist",
    "seed": "graphql query database/seed.graphql --all -p database"
  },
  "dependencies": {
    "aws-sdk": "^2.177.0",
    "bcryptjs": "2.4.3",
    "graphcool-binding": "1.3.2",
    "graphql-yoga": "1.1.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "8.1.0",
    "mime-types": "^2.1.17",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "dotenv": "4.0.0",
    "graphql-cli": "2.10.0",
    "nodemon": "1.14.7",
    "ts-node": "4.1.0",
    "typescript": "2.6.2"
  },
  "now": {
    "alias": "airbnb"
  }
}
